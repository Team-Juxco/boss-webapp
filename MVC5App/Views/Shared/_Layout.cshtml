<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | BOSS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/boss.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js")
</head>
<body>
    <div class="navbar navbar-fixed">
        <div class="container">
            <div class="navbar-header">
                <img class="navbar-button" onclick="toggleSidebar()" />
                @Html.ActionLink("BOSS - Back Office Sales System", "A", "FuelInventory", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-2 d-none d-md-block bg-light sidebar" style="margin-top: 20px; border: 1px solid #1c1e22;">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                @*
            I would like to use the following:
            @Html.ActionLink("Fuel Inventory", "FuelInventory", "Home", null, null)
            However, clicking this link from the month view brings me back to the same month
            instead of the fuel inventory dashboard.
                                *@
                                <a href="@Url.Content("~/FuelInventory/A/")">Fuel Inventory</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Content("~/FuelSales/Index/")">Fuel Sales</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Content("~/Sales/Sales/")">Store Sales</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Content("~/CStoreInventory/Index/")">C-Store Inventory</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Content("~/RestaurantInventory/Index/")">Restaurant Inventory</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Content("~/BusinessExp/BusinessExp/")">Business Expenses</a>
                            </li>
                            <li class="nav-item">    
                                <a href="@Url.Content("~/Reporting/Index/")">Reports</a>
                            </li>
                   
                        </ul>
                    </div>
                </nav>
                @RenderBody()

            </div>
        </div>
        <hr />
        <footer>
            <p style="color:green">
                @if (!string.IsNullOrEmpty(System.Configuration.ConfigurationManager.AppSettings["RDS_DB_NAME"]))
                {<i>Connected to RDS Database: @System.Configuration.ConfigurationManager.AppSettings["RDS_DB_NAME"]</i>}
            </p>
            <p>&copy; @DateTime.Now.Year - Team Juxco - CSc 191-01</p>
        </footer>
    </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/jqueryval")
            @RenderSection("scripts", required: false)
</body>
</html>
