@model IEnumerable<MVC5App.Models.RestaurantInventoryViewModel>

@{
    ViewBag.Title = "RestaurantInventoryReport";
}

<h2>RestaurantInventoryReport</h2>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div style="float:left">
        <ul class="nav flex-column">
            <li class="nav-item">
                @Html.ActionLink("Back", "Index")
            </li>
        </ul>
    </div>
    <div style="float:right">
        <ul class="nav flex-column">
            <li class="nav-item">
                @Html.ActionLink("Export", "ExportRestaurantInventoryToExcel")
            </li>
        </ul>
    </div>
</main>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="table-responsive top-margin">
        <table class="table table-striped table-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoldFor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AmountSold)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoldFor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountSold)
                </td>
            </tr>
            }

        </table>
        </div>
</main>